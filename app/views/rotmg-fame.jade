extends rotmg

block styles
    style.
        .input-group {
            width: 33%;
        }
        #achievements label {
            display: block;
        }
        #achievements label:hover {
            background: #eee;
        }
        #achievements input {
            clear: left;
            float: left;
            margin: 2px 8px 1px 12px;
            padding: 0;
        }

block subcontent
    section.fixed-content
        form(action="#" class="clearfix" class="inline shaded")
            .clearfix
                .input-group
                    label(for="base" title="Fame earned when the character dies") Base Fame
                    input(id="base" type="number")
                .input-group
                    label(for="total" title="Total fame, including bonuses") Total Fame
                    input(id="total" type="number")
            fieldset#achievements
                legend Achievements

block scripts
    script(src="/js/fame.js")
    script.
        var calc = new FameCalc();
        calc.initialize();