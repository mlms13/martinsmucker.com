@import "../mixins";

.clearfix
    *zoom 1

    &:before, &:after
        content ""
        display table
        line-height 0        

    &:after
        clear both

.unstyled
    unstyled()

.sr-only
    border 0
    clip rect(0, 0, 0, 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px

.fixed-content
    margin-left auto
    margin-right auto
    max-width 980px
    padding-left 10px
    padding-right 10px
