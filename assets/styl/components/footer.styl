@import "../variables"

.global-foot
    background #ddd
    line-height 48px
    padding 20px
    text-align center

    @media (min-width: 600px)
        text-align left

.social
    @media (min-width: 600px)
        float right

.social-item
    display inline-block
    font-size 36px
    margin-right 16px

    a
        color #777
        transition 120ms

        &:hover,
        &:focus
            color $blue
            text-decoration none

.copyright
    color #777
    margin 0
