// the full portfolio list
.portfolio
  background: $grayDark
  padding-top: 20px

.portfolio-title
  color: #fff

.portfolio-list
  list-style: none
  margin-top: 0
  margin-bottom: 0
  padding: 20px

  @media (min-width: 660px)
    display: flex
    flex-wrap: wrap

.portfolio-item
  box-shadow: 0 0 1px rgba(0,0,0,0.3)
  margin: 0 10px 20px
  min-height: 180px
  position: relative

  @media (min-width: 660px)
    flex 1 0 auto
    width 300px

.portfolio-item-link
  box-sizing: border-box
  display: flex
  flex-direction: column
  height: 100%
  overflow: hidden
  transition: all $animationSpeed

  &:hover
    box-shadow: 0 0 0 4px $green
    text-decoration: none

.portfolio-item-img
  display: block
  flex: 1
  // always full width, even if the container is bigger than the image
  width: 100%

.portfolio-item-noimage
  background: $green
  color: #fff
  display: block
  flex: 1
  position: relative

  .icon-pictures
    font-size: 48px
    left: 0
    position: absolute
    right: 0
    text-align: center
    top: 50%
    transform: translateY(-50%)

.portfolio-item-title
  background: $green
  color: #fff
  font-weight: bold
  padding: 8px

  .no-touch &
    // if we're using a mouse, set up a fun hover effect
    bottom: -36px
    left: -4px
    opacity: 0
    right: -4px
    transition: opacity 200ms 100ms, bottom 300ms

  .no-touch :hover > &
    bottom: 0
    opacity: 1
    transition: opacity 300ms, bottom 200ms 100ms

// individual portfolio items on the details pages
.portfolio-details-header
  background: $grayDark
  padding: 20px 0

.portfolio-details-title
  color: #fff
  font-family: $fancyFont
  margin: 8px 0

  @media (min-width: 800px)
    float: left

.portfolio-details-date
  color: #ccc
  margin: 8px 0

  @media (min-width: 800px)
    float: right

.portfolio-details-links
  margin-bottom: 15px

  li
    float: left
    margin-right: 15px

  a:hover
    color: lighten($blue, 10%)
    text-decoration: none

.portfolio-link-icon
  margin-right: 4px
  text-decoration: none

.codepen-embed,
.portfolio-details-banner
  box-sizing: border-box
  margin-bottom: 15px

  @media (min-width: 600px)
    border: 4px solid #999

  @media (min-width: 1000px)
    border-width: 8px

.portfolio-details-tags
  margin-bottom: 15px

.portfolio-details-tag
  color: #aaa
  float: left
  margin-right: 18px

  .icon-tag
    margin-right: 4px

.portfolio-details-content
  @media (min-width: 500px)
    font-size: 18px

  @media (min-width: 600px)
    font-size: 20px

  @media (min-width: 800px)
    font-size: 22px
